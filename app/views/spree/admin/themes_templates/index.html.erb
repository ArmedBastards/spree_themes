<% content_for :page_title do %>
  <%= link_to Spree.t(:templates), admin_themes_path %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_template), new_admin_theme_template_url, class: "btn-success", icon: 'add', id: 'admin_new_theme_template_link' %>
<% end %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_theme_templates_index_search">
    <%= search_form_for [:admin, @search], url: admin_theme_templates_path(@theme) do |f| %>
      <div class="form-group">
        <%= f.label Spree.t(:name) %>
        <%= f.text_field :name_cont, class: "form-control js-quick-search-target" %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label Spree.t(:path) %>
            <%= f.text_field :path_cont, class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label Spree.t(:handler) %>
            <%= f.text_field :handler_cont, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div data-hook="admin_users_index_search_buttons" class="form-actions">
        <%= button Spree.t(:search), 'search' %>
      </div>
    <% end %>
  </div>
<% end %>

<table class="table" id="listing_templates" data-hook='admin_templates_listing_table'>
  <thead>
    <tr data-hook="admin_templates_index_headers">
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:path) %></th>
      <th><%= Spree.t(:format) %></th>
      <th><%= Spree.t(:handler) %></th>
      <th data-hook="admin_templates_index_header_actions" class="actions"></th>    
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template|%>
      <tr id="<%= spree_dom_id template %>" data-hook="admin_templates_index_rows">
        <td class='template_name'><%= link_to template.name, edit_admin_theme_template_path(@theme, template) %></td>
        <td class='template_path'><%= template.path %></td>
        <td class='template_format'><%= template.format %></td>
        <td class='template_handler'><%= template.handler %></td>

        <td data-hook="admin_template_index_row_actions" class="actions actions-2 text-right">
          <%= link_to edit_admin_theme_template_path(@theme, template), class: 'btn btn-primary btn-sm  with-tip action-edit no-text', title: '', 'data-original-title' => 'Edit' do %>
            <span class="icon icon-edit"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @templates %>
